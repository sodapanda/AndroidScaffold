<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <cf.qishui.scaffold.widgets.bubbletips.DiamondView
        android:id="@+id/scaffold_bubble_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@+id/scaffold_bubble_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp" />

    <FrameLayout
        android:id="@+id/scaffold_bubble_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/jd_tips_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/scaffold_bubble_tv"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="最小宽度是什么你说"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/scaffold_bubble_tv"
                android:src="@drawable/jd_msg_bar_close_icon" />

        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>